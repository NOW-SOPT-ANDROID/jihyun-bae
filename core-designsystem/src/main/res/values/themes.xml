<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.NOWSOPTAndroid" parent="Theme.Material3.Light.NoActionBar">
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="Theme.NOWSOPTAndroid" parent="Base.Theme.NOWSOPTAndroid" />

    <!-- Button -->
    <style name="Theme.NOWSOPTAndroid.Button" parent="Widget.Material3.Button">
        <item name="android:height">@dimen/button_height</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:minWidth">0dp</item>
        <item name="android:backgroundTint">@color/main_2</item>
        <item name="android:textColor">@color/gray_100</item>
        <item name="android:textAppearance">@style/TextAppearance.Headline</item>
        <item name="cornerRadius">@dimen/button_corner_radius</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <!-- Corner size -->
    <style name="ShapeAppearanceOverlay.App.CornerSize50Percent" parent="">
        <item name="cornerSize">50%</item>
    </style>
</resources>